<div class='page'>
  <div class='header'>
    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='Apple'
            class='header__icon'
          />

          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class='header__block'>
          <img
            src='/svg/search.svg'
            alt='Apple'
            class='header__icon'
          />
          <img
            src='/svg/profile.svg'
            alt='Apple'
            class='header__icon'
          />
        </div>
      </header>
    </div>
    
    <div class="ad__content">
        {{#with ad}}
         <div class="ad header__content ">
            <h5 class="ad__title ad__title-link">{{title}}</h5>
            <a href="{{link.url}}" class="ad__title-link ad__link product__link">{{link.text}}</a>
         </div>
        {{/with}}
    {{/with}}
  </div>

  {{#with iphone_pro}}
    <section class='product product-big product--iphone-pro product--dark product--top'>
      <div class='product__content'>
        <h1 class='product__title'>{{title}}</h1>
        <p class='product__description'>{{descriptions}}</p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a href="{{../link}}" class="product__link">{{this}}</a>
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}

